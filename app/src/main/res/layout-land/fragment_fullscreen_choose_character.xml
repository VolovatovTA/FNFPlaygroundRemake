<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:coverflow="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:theme="@style/ThemeOverlay.FNFPlayground.FullscreenContainer"
    tools:context="fnf.playground.fragments.FullscreenFragmentChooseCharacter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@drawable/stageback"
        >

        <TextView
            android:id="@+id/twOfficialChar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/vtc_garage_sale_outlined"
            android:text="characters"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="55sp" />

        <GridView
            android:id="@+id/coverFlowOfficialCharacters"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:columnWidth="85dp"


            android:numColumns="auto_fit" />
        <ImageButton
            android:id="@+id/imageButtonBack"
            android:soundEffectsEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="left"
            android:scaleType="fitStart"
            android:background="#0000"
            android:src="@drawable/back_btn" />



    </LinearLayout>


</LinearLayout>